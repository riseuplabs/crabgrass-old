#welcome-container
  %ul#welcome-links.navbar
    %li= welcome_box_link
    = render :partial => 'navbar_item', :collection => @group.menu_items.roots
    - if may_edit_menu?
      %li.right
        %a.small_icon.pencil_16{'href'=> groups_menu_items_url(:action => :index)}
          = I18n.t(:edit)
  - if params[:welcome_box] && logged_in?
    #welcome_box
      .inset_box.round
        = render :partial => '/me/dashboard/welcome_box_content'
