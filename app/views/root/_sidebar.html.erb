<%= render :partial => '/widgets/mini_search' %>

<div class="sidebox dark">
  <h2 class="first"><%= I18n.t(:have_your_say) %></h2>
  <ul class="side_list">
    <li>
      <%= [contribute_link, create_group_link, welcome_box_link].join('<li></li>') %>
    </li>
  </ul>
</div>


<div class="sidebox">

<h2 class=alert><%= I18n.t(:members) %></h2>

<%= render :partial => 'avatars/entity_boxes', :locals => {:header => I18n.t(:most_active_members), :entities => most_active_users() } %>   

