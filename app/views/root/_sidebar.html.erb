<h2 class=alert><%= I18n.t(:groups) %></h2>

<%= render :partial => 'avatars/entity_boxes', :locals => {:header => I18n.t(:most_active_groups), :entities => most_active_groups() } %>

<%= render :partial => 'avatars/entity_boxes', :locals => {:header => I18n.t(:recently_active_groups), :entities => recently_active_groups(), :after => link_to(I18n.t(:view_all), group_directory_params(:action => 'most_active')) } %>

